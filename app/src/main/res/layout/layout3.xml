<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <RelativeLayout
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:nestedScrollingEnabled="true">

    <TextView
        android:layout_width="140dp"
        android:layout_height="20dp"
        android:text="Shipping Type"
        android:id="@+id/textView2"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textSize="14dp"
        android:layout_marginLeft="10dp"
        android:textStyle="bold"
        android:layout_marginTop="15dp" />

    <TextView
        android:layout_width="140dp"
        android:layout_height="20dp"
        android:text="Handling Time"
        android:id="@+id/textView6"
        android:textSize="14dp"
        android:layout_below="@+id/textView2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="10dp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="140dp"
        android:layout_height="20dp"
        android:text="Shipping Locations"
        android:id="@+id/textView7"
        android:textSize="14dp"
        android:layout_below="@+id/textView6"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="10dp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="140dp"
        android:layout_height="20dp"
        android:text="Expedited Shipping"
        android:id="@+id/textView8"
        android:textSize="14dp"
        android:textStyle="bold"
        android:layout_below="@+id/textView7"
        android:layout_alignLeft="@+id/textView7"
        android:layout_alignStart="@+id/textView7"
        android:layout_marginTop="15dp" />

    <TextView
        android:layout_width="140dp"
        android:layout_height="20dp"
        android:text="One Day Shipping"
        android:id="@+id/textView9"
        android:textSize="14dp"
        android:textStyle="bold"
        android:layout_below="@+id/textView8"
        android:layout_alignLeft="@+id/textView8"
        android:layout_alignStart="@+id/textView8"
        android:layout_marginTop="15dp" />

    <TextView
        android:layout_width="140dp"
        android:layout_height="20dp"
        android:text="Returns Accepted"
        android:id="@+id/textView10"
        android:textSize="14dp"
        android:textStyle="bold"
        android:layout_below="@+id/textView9"
        android:layout_alignLeft="@+id/textView9"
        android:layout_alignStart="@+id/textView9"
        android:layout_marginTop="15dp" />

    <TextView
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:id="@+id/shippingtype"
        android:textSize="14dp"
        android:layout_alignTop="@+id/textView2"
        android:layout_toRightOf="@+id/textView2"
        android:layout_alignBottom="@+id/handlingtime"
        android:layout_alignParentEnd="false"
        android:layout_alignParentStart="false" />
        <!--android:minLines="2"-->
        <!--android:ellipsize="end"-->
        <!--android:scrollHorizontally="true"  />-->

    <TextView
        android:layout_width="140dp"
        android:layout_height="20dp"
        android:id="@+id/handlingtime"
        android:textSize="14dp"
        android:layout_alignBottom="@+id/textView6"
        android:layout_toRightOf="@+id/textView6"
        android:layout_toEndOf="@+id/textView6"
        android:layout_marginTop="10dp" />

    <TextView
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:id="@+id/shippinglocations"
        android:textSize="14dp"
        android:layout_toRightOf="@+id/textView7"
        android:layout_alignRight="@+id/shippingtype"
        android:layout_alignEnd="@+id/shippingtype"
        android:layout_alignTop="@+id/textView7"
        android:layout_alignBottom="@+id/expedited" />
        <!--android:scrollHorizontally="true" />-->

        <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/expedited"
        android:adjustViewBounds="false"
        android:src="@drawable/tick"
        android:scaleType="fitStart"
        android:layout_above="@+id/textView9"
        android:layout_toRightOf="@+id/textView7"
        android:layout_toEndOf="@+id/textView7"
        android:layout_alignTop="@+id/textView8" />

        <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/oneday"
        android:layout_alignBottom="@+id/textView9"
        android:layout_toRightOf="@+id/textView9"
        android:layout_alignTop="@+id/textView9"
        android:adjustViewBounds="false"
        android:src="@drawable/tick"
        android:scaleType="fitStart" />

        <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/returns"
        android:adjustViewBounds="false"
        android:src="@drawable/tick"
        android:scaleType="fitStart"
        android:layout_toRightOf="@+id/textView10"
        android:layout_toEndOf="@+id/textView10"
        android:layout_alignBottom="@+id/textView10"
        android:layout_alignTop="@+id/textView10" />

</RelativeLayout>
</ScrollView>