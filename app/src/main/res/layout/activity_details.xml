<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.ebaysearch.DetailsActivity"
    android:orientation="vertical"
    android:weightSum="1"
    android:id="@+id/detailLayout"
    android:background="#ffffffff"
    android:nestedScrollingEnabled="true">

    <ImageView
        android:layout_width="166dp"
        android:layout_height="154dp"
        android:id="@+id/itemImage"
        android:layout_gravity="center_horizontal"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/itemTitle"
        android:layout_below="@+id/itemImage"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:textColor="#ff000000" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/itemPrice"
        android:layout_below="@+id/itemTitle"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/itemTitle"
        android:layout_alignEnd="@+id/itemTitle" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/itemLocation"
        android:layout_below="@+id/itemPrice"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:id="@+id/topRated"
        android:layout_below="@+id/itemLocation"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="@drawable/itemtoprated"
        android:visibility="visible" />

    <Button
        android:layout_width="90dp"
        android:layout_height="35dp"
        android:text="BUY NOW"
        android:id="@+id/buynow_btn"
        android:shadowColor="#ff5b5b5b"
        android:singleLine="false"
        android:layout_alignBottom="@+id/fbLogo"
        android:layout_centerHorizontal="true"
        android:background="@drawable/button1" />

    <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:id="@+id/fbLogo"
        android:layout_below="@+id/itemLocation"
        android:layout_alignRight="@+id/itemLocation"
        android:layout_alignEnd="@+id/itemLocation"
        android:background="@drawable/facebook" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="90dp"
        android:layout_height="25dp"
        android:text="BASIC INFO"
        android:id="@+id/button1"
        android:layout_below="@+id/topRated"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="@drawable/button1"
        android:layout_marginTop="10dp" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="90dp"
        android:layout_height="25dp"
        android:text="SELLER"
        android:id="@+id/button2"
        android:background="@drawable/button1"
        android:layout_alignBottom="@+id/button1"
        android:layout_alignRight="@+id/buynow_btn"
        android:layout_alignEnd="@+id/buynow_btn" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="90dp"
        android:layout_height="25dp"
        android:text="SHIPPING"
        android:id="@+id/button3"
        android:background="@drawable/button1"
        android:layout_alignTop="@+id/button2"
        android:layout_alignRight="@+id/fbLogo"
        android:layout_alignEnd="@+id/fbLogo" />

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@+id/button1"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/tabContent"
        android:layout_marginTop="10dp"
        android:nestedScrollingEnabled="true"></RelativeLayout>

</RelativeLayout>
